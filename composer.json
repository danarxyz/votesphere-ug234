{
    "name": "danar/voting-app-php",
    "description": "Modern polling application built with PHP 8.4",
    "type": "project",
    "require": {
        "php": ">=8.4",
        "mpdf/mpdf": "^8.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "platform": {
            "php": "8.4"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.0"
    },
    "scripts": {
        "test": "phpstan analyse src --level=8",
        "clean-logs": "rm -f utils/*.log"
    }
}
